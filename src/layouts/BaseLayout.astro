---
import '../styles/global.css';
import CookieBanner from '../components/CookieBanner.astro';

interface Props {
  pageTitle: string;
  description?: string;
  noIndex?: boolean;
  type?: 'website' | 'article' | 'profile';
}

const {
  pageTitle,
  description = "David Mirga - KI-Experte für KMU & Handwerk in Wien. KI verstehen. Zukunft sichern.",
  noIndex = false,
  type = 'website'
} = Astro.props;

// WICHTIG: Stellt sicher, dass die URL korrekt ist, selbst wenn Astro.site nicht gesetzt ist
const canonicalURL = Astro.site ? new URL(Astro.url.pathname, Astro.site) : Astro.url.href;
---

<!doctype html>
<html lang="de-AT" class="scroll-smooth h-full">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">
  <link rel="shortcut icon" href="/favicon.ico">

  <meta name="theme-color" content="#0B1F3F" />
  
  <title>{pageTitle} | David Mirga</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalURL} />
  <meta name="generator" content={Astro.generator} />
  
  {noIndex ? <meta name="robots" content="noindex, nofollow" /> : <meta name="robots" content="index, follow" />}
  
  <meta property="og:type" content={type} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={`${pageTitle} | David Mirga`} />
  <meta property="og:description" content={description} />
  <meta property="og:locale" content="de_AT" />
  
  <meta name="geo.region" content="AT-9" />
  <meta name="geo.placename" content="Wien" />
  <meta name="geo.position" content="48.2082;16.3738" />
  <meta name="ICBM" content="48.2082, 16.3738" />
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  
  <link 
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Manrope:wght@700;800&display=swap" 
    rel="stylesheet"
    media="print" 
    onload="this.media='all'"
  >
  
  <slot name="head-schema" />
</head>
<body class="bg-brand-light text-slate-700 antialiased flex flex-col min-h-full font-sans">
  
  <header class="fixed w-full z-50 top-0 bg-white/95 backdrop-blur-sm border-b border-slate-100 shadow-sm transition-all">
    <div class="max-w-7xl mx-auto h-20 flex items-center justify-between px-6 md:px-8">
      
      <div class="flex items-center gap-3 md:gap-4">
        <a href="/" class="text-xl md:text-2xl font-heading font-black tracking-tight flex items-center gap-1">
          <span class="text-brand-red">DAVID</span>
          <span class="text-brand-navy">MIRGA</span>
        </a>
        <a href="/abonnieren" class="inline-flex items-center gap-1.5 px-3 py-2 md:px-4 md:py-2 bg-brand-red text-white text-xs md:text-sm font-bold rounded hover:bg-red-700 transition-colors whitespace-nowrap">
          <span class="text-base md:text-lg leading-none">+</span>
          <span>Abonnieren</span>
        </a>
      </div>
      
      <nav class="hidden md:flex gap-6 font-medium text-brand-navy items-center">
        <a href="/ueber-mich" class="hover:text-brand-red transition-colors">Über mich</a>

        <a href="/ki-check" class="text-brand-red hover:text-red-700 font-bold transition-colors flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          KI-Check
        </a>

        <a href="/blog" class="hover:text-brand-red transition-colors">Blog</a>

        <a href="/downloads/ki-kompass" class="hover:text-brand-red transition-colors">Downloads</a>

        <a href="https://www.linkedin.com/in/david-mirga-847336134/" target="_blank" rel="noopener noreferrer" class="px-5 py-2 bg-brand-navy text-white rounded hover:bg-brand-navy/90 transition-colors font-bold ml-2">
          LinkedIn
        </a>
      </nav>
      
      <button id="mobile-menu-btn" class="md:hidden text-brand-navy p-2" aria-label="Menü öffnen">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <nav id="mobile-menu" class="hidden md:hidden bg-white border-t border-slate-100 py-4 absolute w-full shadow-lg">
      <div class="px-6 flex flex-col gap-4">
        <a href="/ueber-mich" class="py-2 text-brand-navy hover:text-brand-red transition-colors font-medium">Über mich</a>

        <a href="/ki-check" class="py-2 text-brand-red hover:text-red-700 font-bold transition-colors flex items-center gap-2">
           <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
           KI-Check starten
        </a>

        <a href="/blog" class="py-2 text-brand-navy hover:text-brand-red transition-colors font-medium">Blog</a>

        <a href="/downloads/ki-kompass" class="py-2 text-brand-navy hover:text-brand-red transition-colors font-medium">Downloads</a>

        <a href="https://www.linkedin.com/in/david-mirga-847336134/" target="_blank" rel="noopener noreferrer" class="py-3 px-5 bg-brand-navy text-white rounded hover:bg-brand-navy/90 transition-colors font-bold text-center mt-2">
          LinkedIn
        </a>
      </div>
    </nav>
  </header>
  
  <main class="flex-grow pt-20">
    <slot />
  </main>
  
  <footer class="bg-brand-navy text-white py-12 mt-20">
    <div class="container mx-auto px-4 text-center">
