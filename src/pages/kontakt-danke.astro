---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  pageTitle="Nachricht erhalten" 
  description="Vielen Dank für deine Kontaktanfrage."
  noIndex={true}
>
  
  <!-- DANKE SECTION - Box Design -->
  <section class="min-h-screen py-8 bg-gradient-to-b from-brand-navy to-brand-navy/95 flex justify-center items-center">
    <div class="container max-w-3xl px-4 py-8 mx-auto">
      
      <!-- Danke Box -->
      <div class="bg-white rounded-xl shadow-2xl p-8 md:p-12 text-center">
        
        <!-- Icon -->
        <div class="mb-6">
          <svg class="w-20 h-20 mx-auto text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        
        <!-- Headline -->
        <h1 class="text-3xl md:text-4xl font-heading font-bold text-brand-navy mb-4">
          Das hat geklappt!
        </h1>
        
        <!-- Text -->
        <p class="text-lg text-slate-800 mb-8 leading-relaxed">
          Die Nachricht ist bei uns eingegangen.
        </p>
        
        <!-- Button zurück -->
        <a 
          href="/" 
          class="inline-block px-8 py-3 bg-brand-navy text-white font-bold rounded-lg hover:bg-brand-navy/90 transition-colors"
        >
          Zurück zur Startseite
        </a>
        
      </div>

    </div>
  </section>

</BaseLayout>