---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

const categoryLabels = {
  'ki-sicherheit': 'KI-Sicherheit',
  'ki-praxis': 'KI-Praxis',
  'ki-strategie': 'KI-Strategie',
  'ki-wissen': 'KI-Wissen'
};
---

<BaseLayout pageTitle="Blog – David Mirga" description="Artikel über KI-Sicherheit, KI-Praxis und KI-Strategie für KMU in Österreich.">
  
  <!-- BLOG SECTION - Zentrierte Box -->
  <section class="min-h-screen py-8 bg-gradient-to-b from-brand-navy to-brand-navy/95 flex justify-center items-start">
    <div class="container max-w-3xl px-4 py-8 mx-auto">
      
      <!-- Weiße Box -->
      <div class="bg-white rounded-xl shadow-2xl p-6 md:p-8">
        
        <h1 class="text-3xl md:text-4xl font-bold text-brand-navy mb-8 font-heading">
          Blog
        </h1>
        
        <div class="space-y-8">
          {posts.map(post => (
            <article class="border-b border-gray-200 pb-8 last:border-b-0">
              
              <span class="text-sm font-medium text-brand-red uppercase tracking-wide">
                {categoryLabels[post.data.category]}
              </span>
              
              <h2 class="text-xl md:text-2xl font-bold text-brand-navy mt-1 mb-2 font-heading">
                <a href={`/blog/${post.slug}`} class="hover:text-brand-red transition-colors">
                  {post.data.title}
                </a>
              </h2>
              
              <p class="text-gray-600 mb-2">
                {post.data.description}
              </p>
              
              <span class="text-sm text-gray-500">
                {new Date(post.data.date).toLocaleDateString('de-AT')}
              </span>
              
            </article>
          ))}
        </div>
        
      </div>
      
    </div>
  </section>
  
</BaseLayout>