---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

const categoryLabels = {
  'ki-sicherheit': 'KI-Sicherheit',
  'ki-praxis': 'KI-Praxis',
  'ki-strategie': 'KI-Strategie',
  'ki-wissen': 'KI-Wissen'
};
---

<BaseLayout pageTitle="Blog – David Mirga" description="Artikel über KI-Sicherheit, KI-Praxis und KI-Strategie für KMU in Österreich.">
  <section class="max-w-3xl mx-auto px-4 py-12">
    
    <h1 class="text-3xl md:text-4xl font-bold text-[#0B1F3F] mb-8 font-['Manrope']">
      Blog
    </h1>
    
    <div class="space-y-8">
      {posts.map(post => (
        <article class="border-b border-gray-200 pb-8">
          
          <span class="text-sm font-medium text-[#DC2626] uppercase tracking-wide">
            {categoryLabels[post.data.category]}
          </span>
          
          <h2 class="text-xl md:text-2xl font-bold text-[#0B1F3F] mt-1 mb-2 font-['Manrope']">
            <a href={`/blog/${post.slug}`} class="hover:underline">
              {post.data.title}
            </a>
          </h2>
          
          <p class="text-gray-600 mb-2">
            {post.data.description}
          </p>
          
          <span class="text-sm text-gray-500">
            {new Date(post.data.date).toLocaleDateString('de-AT')}
          </span>
          
        </article>
      ))}
    </div>
    
  </section>
</BaseLayout>