---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout pageTitle="Kontakt" description="Schreib mir oder buche dein Erstgespr√§ch.">
  
  <section class="py-20 bg-brand-light min-h-screen flex items-center">
    <div class="container max-w-5xl">
      
      <div class="bg-white rounded-3xl shadow-xl overflow-hidden grid md:grid-cols-2">
        
        <!-- LINKE SEITE: Infos -->
        <div class="p-10 bg-brand-navy text-white flex flex-col justify-between">
          <div>
            <span class="text-brand-red font-bold tracking-wider uppercase text-xs">Kontakt</span>
            <h1 class="text-3xl font-heading font-bold mb-6 mt-2">Lass uns reden.</h1>
            <p class="text-slate-300 mb-8 leading-relaxed">
              Hast du Fragen zu KI-Workshops oder Strategie?
              Nutze am besten das Formular rechts.
            </p>
            
            <div class="space-y-6">
              <div class="flex items-center gap-4">
                <div class="w-10 h-10 rounded-full bg-brand-red flex items-center justify-center text-xl">‚úâÔ∏è</div>
                <!-- SPAM SCHUTZ: Kein klickbarer Link -->
                <span class="font-bold">kontakt [at] kilexikon [punkt] com</span>
              </div>
              <div class="flex items-center gap-4">
                <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center text-xl">üìç</div>
                <span>1100 Wien, √ñsterreich</span>
              </div>
            </div>
          </div>

          <!-- Social Media -->
          <div class="mt-12">
            <p class="text-sm text-slate-400 mb-4">Vernetz dich mit mir:</p>
            <div class="flex gap-4">
                <a href="#" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors text-sm font-bold">
                    LinkedIn
                </a>
                <a href="#" class="px-4 py-2 bg-pink-600 text-white rounded hover:bg-pink-700 transition-colors text-sm font-bold">
                    Instagram
                </a>
            </div>
          </div>
        </div>

        <!-- RECHTE SEITE: Formspree Formular -->
        <div class="p-10 bg-white">
          <h2 class="text-2xl font-bold text-brand-navy mb-6">Nachricht senden</h2>
          
          <!-- ACHTUNG: Ersetze 'PLACEHOLDER' sp√§ter mit deiner echten Formspree-ID -->
          <form action="https://formspree.io/f/PLACEHOLDER" method="POST" class="space-y-4">
            
            <div>
              <label for="name" class="block text-sm font-bold text-brand-navy mb-1">Dein Name</label>
              <input type="text" name="name" id="name" required 
                class="w-full px-4 py-3 rounded-lg bg-slate-50 border border-slate-200 focus:border-brand-red focus:ring-1 focus:ring-brand-red outline-none transition-colors"
                placeholder="Max Mustermann" />
            </div>

            <div>
              <label for="email" class="block text-sm font-bold text-brand-navy mb-1">Deine E-Mail</label>
              <input type="email" name="email" id="email" required 
                class="w-full px-4 py-3 rounded-lg bg-slate-50 border border-slate-200 focus:border-brand-red focus:ring-1 focus:ring-brand-red outline-none transition-colors"
                placeholder="max@firma.at" />
            </div>

            <div>
              <label for="message" class="block text-sm font-bold text-brand-navy mb-1">Deine Nachricht</label>
              <textarea name="message" id="message" rows="4" required
                class="w-full px-4 py-3 rounded-lg bg-slate-50 border border-slate-200 focus:border-brand-red focus:ring-1 focus:ring-brand-red outline-none transition-colors"
                placeholder="Wie kann ich dir helfen?"></textarea>
            </div>

            <button type="submit" class="w-full py-4 bg-brand-red text-white font-bold rounded-lg shadow-lg hover:bg-red-700 transition-transform hover:-translate-y-0.5">
              Nachricht absenden
            </button>

          </form>
        </div>

      </div>
    </div>
  </section>

</BaseLayout>